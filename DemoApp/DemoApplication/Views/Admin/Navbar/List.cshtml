@using DemoApplication.ViewModels.Admin.Navbar
@model List<navListViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-controller="navbar" asp-action="add" target="_blank" class="btn btn-secondary">Add new Navbar</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Books</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Order</th>
                       @*     <th>Author</th>
                            <th>Created at</th>
                            <th class="text-end">Actions</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var nav in Model)
                        {
                            <tr>
                                <td>@nav.Name</td>
                                <td>@nav.Order</td>
                                <td class="text-end">
                                    <a asp-route="admin-nav-update" asp-route-Id="@nav.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-nav-delete" asp-route-id="@nav.Id" id="book-form-@nav.Id"></form>
                                    <button type="submit" form="book-form-@nav.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>